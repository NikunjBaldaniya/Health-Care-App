<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cartPopularMedicine"
    android:layout_margin="10dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:background="@drawable/blue_boarder_bg_medicine"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/imgMedicine"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/panadol"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtMedicineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Panadol"
            android:maxLength="13"
            android:textSize="13dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_semibold"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            app:layout_constraintStart_toStartOf="@+id/imgMedicine"
            app:layout_constraintTop_toBottomOf="@+id/imgMedicine" />


        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_bg"
            android:orientation="horizontal"
            android:paddingStart="3sp"
            android:paddingTop="0.5dp"
            android:paddingEnd="3dp"
            android:paddingBottom="1dp"
            app:layout_constraintStart_toStartOf="@+id/txtMedicineName"
            app:layout_constraintTop_toBottomOf="@+id/txtMedicineName">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ "
                android:textSize="7dp"
                android:textColor="@color/blue" />

            <TextView
                android:id="@+id/txtRating"
                android:layout_width="wrap_content"
                android:layout_height="11dp"
                android:text="4.7"
                android:textColor="@color/blue"
                android:textSize="7dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/linearLayout8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txtMedicinePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15155.99"
                android:maxLength="9"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/btnAddToCart"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/add_image_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>