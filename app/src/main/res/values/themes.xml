<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.HealthCareApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->

        <!-- Primary brand color -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondaryVariant">@android:color/holo_blue_bright</item>
        <item name="colorOnSecondary">@android:color/holo_blue_light</item>

        <!-- Background -->
        <item name="android:colorBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error color (optional) -->
        <item name="colorError">@android:color/holo_red_light</item>
        <item name="colorOnError">@color/white</item>

    </style>


    <style name="Theme.HealthCareApp" parent="Base.Theme.HealthCareApp">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TopCorner">
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="Theme.HealthCareApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.HealthCareApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HealthCareApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>